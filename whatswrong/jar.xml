<?xml version="1.0"?>

<project name="Demo" default="CreateExecutableJarFileWithExternalLibrary">
  <property file="jar.properties"/>
  <target name="CreateExecutableJarFileWithExternalLibrary">

    
    <jar destfile="${name}-${version}.jar">
      <zipfileset dir="classes/production" prefix=""/>
      <!--<zipfileset dir="lib" includes="*.jar" prefix="lib/" />  -->
      <zipfileset src="lib/epsgraphics-1.1.jar"/>
      <zipfileset src="lib/lucene-core-2.3.1.jar"/>
      <zipfileset src="lib/lucene-highlighter-2.3.1.jar"/>
      <manifest>
        <attribute name="Main-Class" value="whatswrong.WhatsWrongWithMyNLP"/>
        <!--<attribute name="Class-Path" value="lib/*.jar"/> -->
        <attribute name="Specification-Version" value="${version}"/>
        <attribute name="Specification-Title" value="${name}"/>
        
      </manifest>
    </jar>
  </target>
</project>